<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!--================================ Abstract bases ======================================-->

	<ThingDef Class="BaseRobot.ThingDef_BaseRobot_Building_RechargeStation" Name="Base_X2_Building_RechargeStation" Abstract="True">
		<category>Building</category>
		<soundImpactDefault>BulletImpactMetal</soundImpactDefault>
		<selectable>true</selectable>
		<drawerType>MapMeshAndRealTime</drawerType>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<repairEffect>Repair</repairEffect>
		<leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
		<filthLeaving>BuildingRubble</filthLeaving>
	</ThingDef>

	<ThingDef Class="BaseRobot.ThingDef_BaseRobot_Building_RechargeStation" ParentName="Base_X2_Building_RechargeStation" Name="Base_X2_AIRobotRechargeStation" Abstract="True">
		<ThingClass>BaseRobot.Building_BaseRobotRechargeStation</ThingClass>
		<AltitudeLayer>Building</AltitudeLayer>
		<passability>Standable</passability>
		<PathCost>70</PathCost>
		<CastEdgeShadows>True</CastEdgeShadows>
		<useHitPoints>True</useHitPoints>
		<Size>(1,1)</Size>
		<statBases>
			<Flammability>1.0</Flammability>
		</statBases>
		<tickerType>Normal</tickerType>
		<tradeTags>
			<li>Robots</li>
			<li>Exotic</li>
		</tradeTags>
		<comps>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>100</basePowerConsumption>
				<transmitsPower>false</transmitsPower>
			</li>
		</comps>
	</ThingDef>

</Defs>
